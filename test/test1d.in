$rem
    jobname     test1d
    jobtype     simulation
	loaddat		true
    dim         1
	hbar		1
    kT          0.01
    Gamma0      0.03
$end

$grid
	rmin		-2		
	rmax		2		
	Nr			10000

	#-- fef related --#

	bandwidth	1.5
	derange		3e-5	3e-6
$end

$simulation
    Ntraj       20
    mass        14000
    EndT        100
    Nstep       10000
    Anastep     100

	#-- init state relateda --#

    initTemp    0.5
    vibstate    0
	elestate	0
    initmode    delta
	initravg	0.4
	initpavg	0
$end

$surfaces
    surfnum     2
	cutoff_gamma	0

    surfmode   harmonic	harmonic 
	@surfpara
		0.896 	0 		0	
		0.896 	0 		0.2
	@end

    gammamode	constant
	@gammapara
		1
	@end

$end
