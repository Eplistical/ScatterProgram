$rem
    jobname     newns_model
	loaddat		true
    dim         2
	hbar		1
    kT          0.001
    Gamma0      0.03
$end

$grid
	rmin		-2			-15 	
	rmax		2			-0.22
	Nr			6000		10000

	#-- fef related --#

	bandwidth	1.5
	derange		3e-5	3e-6
$end

$simulation
    Ntraj       5000
    mass        14000		55000
    EndT        5000
    Nstep       20000
    Anastep     100
	Algorithms	CME BCME 

	#-- init state relateda --#

    initTemp    0.0005
    vibstate    15
	elestate	0
    initmode    ring  	p_gaussian
	initravg	0	  	-15
	initpavg	0		20
$end

$surfaces
    surfnum     	2
	cutoff_gamma	0

    surfmode   harmonic	morse harmonic newns
	@surfpara
		0.896 	0 		0					# i = 0, d = 0
		0.011	-0.011	0.64	-3.5		# i = 0, d = 1
		0.896 	0 		0.2					# i = 1, d = 0
		1 		0.2 	0.67	0			# i = 1, d = 1
	@end

    gammamode	gaussian	fermi
	@gammapara
		1		1		4		0
		2		0		0.64	0
	@end
$end
