$rem
    jobname     try
    jobtype     surface
	loaddat		true
    DIM         2
	hbar		1
    kT          0.001
    Gamma0      0.03
$end

$grid
	rmin		-2		-15
	rmax		2		-0.22
	Nr			6000	10000
$end

$simulation
    Ntraj       2000
    mass        14000   55000        
    EndT        30000
    Nstep       450000
    Anastep     100

	#-- init state relateda --#

    prepInit    false
    initTemp    0.5
    vibstate    15
	elestate	0
    initmode    ring	delta
	initravg	0		-15
	initpavg	0		20
$end

$surfaces
    surfnum     2
	cutoff_gamma	0.075

    @surfmode    
		harmonic 
		morse
		harmonic 
		newns
	@end

	@surfpara
		0.896 	0 		0	
		0.011 	-0.011	0.64	-3.5
		0.896 	0 		0.2
		1	 	0.2		0.67 	0
	@end

    @gammamode
		gaussian
		fermi
	@end

	@gammapara
		1		1		4		0
		2		0		0.64 	0
	@end

	#-- fef related --#

	bandwidth	1.5
	derange		3e-5	3e-6
$end
