$rem
    jobname     test2d
    jobtype     simulation
	loaddat		true
    dim         2
	hbar		1
    kT          0.01
    Gamma0      0.03
$end

$grid
	rmin		-2		-1
	rmax		2		1
	Nr			40		20

	#-- fef related --#

	bandwidth	1.5
	derange		3e-5	3e-6
$end

$simulation
    Ntraj       30
    mass        14000 	 55000
    EndT        100
    Nstep       10000
    Anastep     100

	#-- init state relateda --#

    initTemp    0.5
    vibstate    0
	elestate	0
    initmode    delta	delta
	initravg	0.4		0
	initpavg	0		20
$end

$surfaces
    surfnum     2
	cutoff_gamma	0

    surfmode   harmonic	harmonic harmonic harmonic
	@surfpara
		0.896 	0 		0	
		0.896 	0 		0.2
		0.698 	0 		0	
		0.698 	0 		0.1
	@end

    gammamode	constant constant
	@gammapara
		1
		1
	@end

$end
